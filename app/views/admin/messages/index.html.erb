<% title("الرسائل المستقبله") %>

<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="messages-list">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">الرسائل المستقبله</h4>
          </div>

          <div class="panel-body">
            <div class="text-center top-pagination">
              <%= paginate @messages_list %>
            </div>
            
            <div class="table-responsive">
              <table class="table table-striped table-condensed table-bordered">
                <tr>
                  <th>اسم المرسل</th>
                  <th>البريد الإلكتروني</th>
                  <th>التوقيت</th>
                  <th>عرض</th>
                </tr>

                <% @messages_list.each do |message| %>
                  <tr>
                    <td><%= message.name %></td>
                    <td><%= message.email %></td>
                    <td><%= message.created_at.strftime("%Y-%m-%d <|> %H:%M:%S") %></td>
                    <td><%= link_to sanitize('<i class="fa fa-eye"></i> &middot; عرض'), { action: :show, id: message.id }, class: 'btn btn-xs btn-primary' %></td>
                  </tr>
                <% end %>
              </table>
            </div>
            
            <div class="text-center bottom-pagination">
              <%= paginate @messages_list %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>