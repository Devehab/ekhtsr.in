<% title('تغيير كلمة المرور') %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3">
      <div class="dashboard">
        <div class="row">
          <div class="col-lg-12 col-md-12">
            <div class="edit-shorten-url-form">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">تغيير كلمة المرور</h4>
                </div>
                
                <div class="panel-body">
                  <div id="get-question-num">
                    <p>قم بإدخال اسم المستخدم الخاص بك:</p>
                    
                    <%= form_tag({ action: :get_question_num }, { method: :get, id: 'get_question_num', remote: :true }) do %>
                      <%= text_field_tag :username, '', autofocus: true, class: 'form-control txt-main get-question-num-text-box', required: :required, maxlength: 16, placeholder: 'أدخل اسم المستخدم' %>
                    <% end %>
                  </div>
                  
                  <div id="edit-password">
                    <%= form_tag({ action: :update }, { method: :patch, id: 'edit_password' }) do %>
                      <div class="form-group">
                        <%= label_tag :question, 'سؤال الأمان' %>
                        <p class="question"></p>
                      </div>
                    
                      <div class="form-group">
                        <%= label_tag :answer, 'الإجابة' %>
                        <%= text_field_tag :answer, '', autofocus: :true, class: 'form-control txt-main', required: :required, maxlength: 50 %>
                      </div>

                      <div class="form-group">
                        <%= label_tag :password, 'كلمة المرور الجديدة' %>
                        <%= password_field_tag :password, '', autocomplete: "off", class: 'form-control txt-main', required: :required, maxlength: 128 %>
                        <p class="reg-info text-right">يجب أن تتكون كلمة المرور من 6 خانات أو أكثر.</p>
                      </div>

                      <div class="form-group">
                        <%= label_tag :password_confirmation, 'تأكيد كلمة المرور' %>
                        <%= password_field_tag :password_confirmation, '', autocomplete: "off", class: 'form-control txt-main', required: :required, maxlength: 128 %>
                      </div>

                      <center>
                        <%= recaptcha_tags %>
                      </center>
                    <% end %>
                  </div>
                </div>
                
                <div class="panel-footer">
                  <button type="submit" class="btn btn-main btn-md get-question-num" form="get_question_num" onclick="$('#get_question_num').submit();">متابعة</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>