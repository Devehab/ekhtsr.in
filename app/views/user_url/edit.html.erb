<% title('تعديل رابطك') %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3">
      <div class="dashboard">
        <div class="row">
          <div class="col-lg-12 col-md-12">
            <div class="edit-shorten-url-form">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">تعديل رابطك</h4>
                </div>
                
                <div class="panel-body">
                  <%= form_for(@user_url, url: { action: 'update', id: @user_url.id }, html: { method: :patch, id: 'edit_user_url' }) do |f| %>
                    <div class="form-group">
                      <%= f.label :url, 'رابطك' %>
                      <%= f.text_field :url, autofocus: true, class: 'form-control txt-main', required: :required, placeholder: 'example.com' %>
                    </div>
                  
                    <div class="form-group">
                      <%= f.label :title, 'العنوان' %>
                      <%= f.text_field :title, class: 'form-control txt-main', maxlength: 200 %>
                    </div>
                  
                    <%= f.label :password, 'كلمة مرور' %>
                    <%= f.text_field :password, class: 'form-control txt-main', maxlength: 100 %>
                  <% end %>
                </div>
                
                <div class="panel-footer">
                  <button type="submit" class="btn btn-main btn-md" form="edit_user_url" onclick="$('#edit_user_url').submit();">تحديث</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>